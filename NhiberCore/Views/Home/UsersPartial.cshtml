@model List<NHiberCore.Core.Models.UserGUI>
@{
    List<NHiberCore.Core.Models.UserGUI> allUsers = ViewData["Users"] as List<NHiberCore.Core.Models.UserGUI>;
}


<div class="row">
    <form class="form-inline">
        <div class="form-group">
            <label for="exampleInputPassword1">First Name</label>
            <input type="text" class="form-control" id="firstNameTextFld" placeholder="John">
            <label for="exampleInputPassword1">Last Name</label>
            <input type="text" class="form-control" id="lastNameTextFld" placeholder="Johnson">
        </div>
        <button type="submit" class="btn btn-primary" id="addMemberBtn">Add member</button>
    </form>
    <table class="table table-striped table-hover table-bordered" id="userTable">
        @if (allUsers.Select(x => x.Number).ToList().Distinct().Count() > 1)
        {
            <caption class="text-left" id="userTableCaption">All users</caption>
        }
        else
        {
            <caption class="text-left" id="userTableCaption">@string.Format(allUsers[0].Number)</caption>
        }

        <thead>
            <tr>
                <th class="center">#</th>
                <th class="center">ID</th>
                <th class="center">First Name</th>
                <th class="center">Last Name</th>
                <th class="center">Room</th>
                <th class='col-md-1'></th>
            </tr>
        </thead>
        <tbody id="userInformation">
            @for (int i = 0; i < allUsers.Count(); i++)
            {
                <tr>
                    <td>
                        @(i + 1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => allUsers[i].ID)
                    </td>
                    <td id="@string.Format("userFirstName{0}", i)">
                        @Html.DisplayFor(modelItem => allUsers[i].FirstName)
                    </td>
                    <td id="@string.Format("userLastName{0}", i)">
                        @Html.DisplayFor(modelItem => allUsers[i].LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => allUsers[i].Number)
                    </td>
                    <td>
                        <button type='button' class='btn btn-default delete-button'>
                            <span class='glyphicon glyphicon-remove' aria-hidden='true'></span>
                        </button>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

